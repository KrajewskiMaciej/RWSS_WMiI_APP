<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RWSS_WMiI.Views.Boardgames">

    <ScrollView>
        <StackLayout Spacing="30" Padding="5,30,5,0">
            <Label FontFamily="OpenSans-Semibold" Text="Planszówki" Style="{StaticResource Headline}"/>

            <Image
                Source="logo_rwss.png"
                HeightRequest="100"/>

            <Line Stroke="{StaticResource Black}" StrokeThickness="1" X1="0" X2="512"/>

            <VerticalStackLayout
            Margin="30"
            Spacing="15">



                <Label
                Text="W trakcie budowy"
                FontSize="20"
                HorizontalTextAlignment="Center"
                />

            </VerticalStackLayout>
        </StackLayout>
    </ScrollView>

</ContentPage>