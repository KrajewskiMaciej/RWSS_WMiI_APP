<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RWSS_WMiI.Views.Account">

    <ScrollView>
        <StackLayout Spacing="30" Padding="5,30,5,0">
            <Label FontFamily="OpenSans-Semibold" Text="Konto" Style="{StaticResource Headline}"/>

            <Image
                Source="logo_rwss.png"
                HeightRequest="100"/>

            <Line Stroke="{StaticResource Black}" StrokeThickness="1" X1="0" X2="512"/>

            <Grid>
                
                <VerticalStackLayout
                    Margin="30"
                    Spacing="15">

                    <Label
                Text="Testowanie aplikacji bunkier-klucz-portiernia &#10; dla RWSS WMiI &#10; Testy przeprowadzane na: &#10; Redmi Note 11 Pro"
                Style="{StaticResource SubHeadline}"/>

                    <Button
                Text="O Aplikacji" 
                Command="{Binding AboutCommand}"
                HorizontalOptions="Fill" />


                    <Button VerticalOptions="End" Text="Wyloguj" Command="{Binding LogoutCommand}" HorizontalOptions="Fill" />

                </VerticalStackLayout>
            </Grid>
        </StackLayout>
    </ScrollView>

</ContentPage>
