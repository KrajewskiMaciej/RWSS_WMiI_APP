<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RWSS_WMiI.Views.LoginPage"
             Shell.FlyoutItemIsVisible="False"
             Shell.TabBarIsVisible="False"
             Shell.FlyoutBehavior="Disabled">

    <Grid>

        <StackLayout Spacing="30" Padding="5,30,5,0">
            <Label FontFamily="OpenSans-Semibold" Text="RWSS WMiI App" Style="{StaticResource Headline}"/>

            <Image 
                Source="logo_rwss.png"
                HeightRequest="100"/>

            <Line Stroke="{StaticResource Black}" StrokeThickness="1" X1="0" X2="512"/>

            <StackLayout 
            Margin="30,0,30,0"
            Spacing="15">

                

                <StackLayout Padding="25,0,25,25">
                    <Label Text="Logowanie" FontSize="30" Style="{StaticResource SubHeadline}"/>
                </StackLayout>

                <StackLayout>
                    
                    <Label FontSize="18" Text="Użytkownik"/>
                    <Grid Margin="0,5">
                        <Frame Opacity="0.3" BackgroundColor="Gray" CornerRadius="5"/>
                        <Entry BackgroundColor="Transparent"
                               Placeholder="Nazwa"
                               TextColor="White"
                               Margin="5,0"
                               PlaceholderColor="Gray"
                               ClearButtonVisibility="WhileEditing"
                               TextChanged="SaveLogin"
                               ReturnType="Next"
                            >
                            <Entry.Keyboard>
                                <Keyboard x:FactoryMethod="Create">
                                    <x:Arguments>
                                        <KeyboardFlags>CapitalizeNone</KeyboardFlags>
                                    </x:Arguments>
                                </Keyboard>
                            </Entry.Keyboard>
                        </Entry>
                    </Grid>

                    <Label FontSize="18" Text="Hasło"/>
                    <Grid Margin="0,5">
                        <Frame Opacity="0.3" BackgroundColor="Gray" CornerRadius="5"/>
                        <Entry BackgroundColor="Transparent"
                               Placeholder="Hasło"
                               TextColor="White"
                               Margin="5,0"
                               PlaceholderColor="Gray"
                               IsPassword="True"
                               TextChanged="SavePassword"
                               
                               >
                            <Entry.Keyboard>
                                <Keyboard x:FactoryMethod="Create">
                                    <x:Arguments>
                                        <KeyboardFlags>CapitalizeNone</KeyboardFlags>
                                    </x:Arguments>
                                </Keyboard>
                            </Entry.Keyboard>
                        </Entry>
                    </Grid>
                    
                    <StackLayout VerticalOptions="FillAndExpand" Orientation="Horizontal">
                        <Label Style="{StaticResource SubHeadline}" FontSize="10" x:Name="CheckLogin" TextColor="Red"/>
                    </StackLayout>
                    
                </StackLayout>

                <Button Margin="0,15" Text="Zaloguj" FontFamily="OpenSans-Semibold" Clicked="CheckLoginCommand" />

                <StackLayout VerticalOptions="FillAndExpand" Orientation="Horizontal">
                    <Label Text="Przypomnij Hasło" VerticalOptions="EndAndExpand"/>

                </StackLayout>

            </StackLayout>
        </StackLayout>
    </Grid>
    
</ContentPage>