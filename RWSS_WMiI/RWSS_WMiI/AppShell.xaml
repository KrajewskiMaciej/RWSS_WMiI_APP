<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="RWSS_WMiI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:RWSS_WMiI"
    xmlns:views="clr-namespace:RWSS_WMiI.Views"
    Title="RWSS_WMiI">

        <ShellContent ContentTemplate="{DataTemplate views:Start}" Route="Start"/>
        <ShellContent ContentTemplate="{DataTemplate views:LoginPage}" Route="LoginPage"/>
        <ShellContent ContentTemplate="{DataTemplate views:About}" Route="About"/>

        <TabBar>


            <Tab Title="Strona Główna" Icon="home_outline.png">
            <ShellContent ContentTemplate="{DataTemplate views:MainPage}" Route="MainPage"/>
        </Tab>

        <Tab Title="Aktualności" Icon="news.png">
            <ShellContent ContentTemplate="{DataTemplate views:Info}" Route="Info"/>
        </Tab>

        <Tab Title="Konto" Icon="person_outline.png">
            <ShellContent ContentTemplate="{DataTemplate views:Account}" Route="Account"/>
        </Tab>
        

    </TabBar>
    


</Shell>
