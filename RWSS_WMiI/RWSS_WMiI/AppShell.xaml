<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="RWSS_WMiI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:RWSS_WMiI"
    xmlns:views="clr-namespace:RWSS_WMiI.Views"
    Title="RWSS_WMiI">

        <ShellContent ContentTemplate="{DataTemplate views:LoginPage}" Route="LoginPage"/>

        <TabBar>


            <Tab Title="Strona Główna" Icon="home_outline.png">
            <ShellContent ContentTemplate="{DataTemplate views:MainPage}" Route="MainPage"/>
        </Tab>

        <Tab Title="Konto" Icon="person_outline.png">
            <ShellContent ContentTemplate="{DataTemplate views:Account}" />
        </Tab>

        <Tab Title="O Aplikacji" Icon="information_circle_outline.png">
            <ShellContent ContentTemplate="{DataTemplate views:About}"/>
        </Tab>
        
    </TabBar>
    


</Shell>
